{
  "name": "lucid-suggest",
  "version": "0.2.0",
  "description": "Fulltext search and autocomplete engine that works out of the box.",
  "main": "build/index.js",
  "types": "typings.d.ts",
  "scripts": {
    "cleanup": "rm -rf build && rm -rf pkg",
    "compile": "cd ../rust/wasm && wasm-pack build --target bundler --out-dir ../../javascript/pkg",
    "roll-cjs": "rollup -c rollup/config-cjs.js",
    "roll-web": "rollup -c rollup/config-iife.js",
    "bench": "node benches/search.js",
    "build": "npm run cleanup && npm run compile && npm run roll-cjs && npm run roll-web",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thaumant/lucid-suggest/tree/master/javascript"
  },
  "author": "Ilia Schelokov <thaumant@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thaumant/lucid-suggest/issues"
  },
  "homepage": "https://github.com/thaumant/lucid-suggest#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-wasm": "^3.0.0",
    "benchmark": "^2.1.4",
    "jest": "^25.5.4",
    "rollup": "^2.12.0"
  }
}
